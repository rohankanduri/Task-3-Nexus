<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="../stylesheets/profile.css">
    <title>Profile new</title>
</head>

<body>
    
    <div class="lic_details">
      <div class="background">
        <div class="shape"></div>
        <div class="shape"></div>
      </div>

      <% let userId = user._id %>


      <form action="/profiles" id="lic_details_form" method="post">
        <input type="hidden" name="userId" value="<%= userId %>">

        <h3>Profile</h3>
        <label for="name"> First Name</label>
        <input type="text" placeholder="First Name" id="fname" name="fname" required>

        <label for="name"> Last Name</label>
        <input type="text" placeholder="Last Name" id="lname" name="lname" required>

        <label for="name"> Phone Number</label>
        <input type="number" placeholder="Phone Number" id="phone" name="phone" required>

        <label for="dob">  Date of Birth</label>
        <input type="date" placeholder="" id="dob" name="dob" required>

        <label for="name"> Pincode </label>
        <input type="text" placeholder="Pincode" id="pincode" name="pincode" required>

        <label for="name">  Address</label>
        <input type="text" placeholder="Address " id="address" name="address" required>

        <label for="name">  Image</label>
        <input type="text" placeholder="Image address" id="image" name="image" required>

       
        <button >Submit</button>
      </form>
      



    <script src="/javascripts/profile.js"></script>
</body>

</html>